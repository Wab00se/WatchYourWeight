ViewManager:
   WelcomeView:

<WelcomeView>:
   name: "welcome"

   GridLayout:
      cols: 1
      size: root.width, root.height
      Image:
         source:"assets/logo.png"
         pos_hint: {"center_x": 0.67, "center_y": 0.4}
      TextInput:
         id: username
         text:'Your Username'
         multiline: False
      TextInput:
         id: password
         text:'Your Password'
         multiline: False
      
      GridLayout:
         cols:2
         spacing: 20
         padding: 20

         
         Button:
            text:'Login'
         Button:
            text:'New User'
            on_press: root.manager.current = 'registration'
            

         